{% extends 'base.html.twig' %}

{% block title %}
  Link index
{% endblock %}

{% block body %}
  {% include 'header.html.twig' %}

  <div class="container my-6 mx-auto flex flex-col items-center justify-center px-6 pb-6">
    <h1>Links</h1>

    <table class="table-auto">
      <thead>
        <tr>
          <th>Id</th>
          <th>Link</th>
          <th>FullLink</th>
          <th>CreatedAt</th>
          <th>UpdatedAt</th>
          <th>IsActive</th>
          <th>LastUsedAt</th>
          <th>UsesCount</th>
          <th>actions</th>
        </tr>
      </thead>
      <tbody>
        {% for link in links %}
          <tr>
            <td>{{ link.id }}</td>
            <td>{{ link.link }}</td>
            <td>{{ link.fullLink }}</td>
            <td>{{ link.createdAt ? link.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ link.updatedAt ? link.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ link.isActive ? 'Yes' : 'No' }}</td>
            <td>{{ link.lastUsedAt ? link.lastUsedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ link.usesCount }}</td>
            <td>
              <a href="{{ path('app_link_show', { id: link.id }) }}">show</a>
              <a href="{{ path('app_link_edit', { id: link.id }) }}">edit</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="9">no records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <a href="{{ path('app_link_new') }}">Create new</a>
  </div>
{% endblock %}
